<html>
    <h1>Add New Post</h1>
    <div class ="row>">
        <div class = "col-md-4">
            <p>Guidelines</p>
            <ul>
                <li>Be Creative</li>
                <li>Be Constructive</li>
            </ul>
        </div>
    </div>
    <div class = "col-md-8">
        <%= form_for [@topic, @post] do |f| %>
        <div class = "form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Post Title' %>
        </div>
        <div class= "form-group">
            <%= f.label :body %>
            <%= f.text_field :body, class: 'form-control', placeholder: 'Enter Post' %>
        </div>
        <div class="form-group">
            <%=f.submit "Save", class: 'btn btn-success'%>
        </div>
        <% end %>
    </div>
    
</html> 
