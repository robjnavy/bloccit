<h1>New Ad</h1>
<div class="row">
    <%= form_for @advertisement do |f| %>
    <div class = "form-group">
        <%=f.label :title%>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter Ad"%>
    </div>
        <div class = "form-group">
        <%=f.label :copy%>
        <%= f.text_field :copy, rows: 8, class: "form-control", placeholder: "Enter Post Body"%>
    </div>
        </div>
        <div class = "form-group">
        <%=f.label :price%>
        <%= f.number_field :price,class: "form-control", placeholder: 99%>
    </div>
    <div class="form-group">
        <%= f.submit "Save",  class: 'btn btn-success'%>
    </div>
    <%end%>
</div>